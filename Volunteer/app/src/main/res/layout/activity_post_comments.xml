<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostCommentsActivity">

    <TextView
        android:id="@+id/comment_part"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:text="Comments"
        android:textColor="@color/default_text_blue"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/white_background_profile"
        />

    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_comments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/comment_part"
        android:layout_marginTop="10dp"
        android:layout_above="@id/add_comment_button"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        <Button
            android:id="@+id/add_comment_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/light_blue"
            android:gravity="center_horizontal"
            android:text="+"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp" />


</RelativeLayout>