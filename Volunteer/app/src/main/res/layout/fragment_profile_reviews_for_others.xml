<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileReviewsForOthersFragment">


    <TextView
        android:id="@+id/reviews_for_others"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:text="Reviews"
        android:textColor="@color/default_text_blue"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/white_background_profile"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_reviews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/reviews_for_others"
        android:layout_marginTop="10dp"
        android:layout_above="@id/add_review_button"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <Button
        android:id="@+id/add_review_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/light_blue"
        android:gravity="center_horizontal"
        android:text="+"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp" />

</RelativeLayout>