<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/comment_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true">

    <TextView
        android:id="@+id/post_comment_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="Name"
        android:textColor="@color/default_text_blue"
        android:textSize="15dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/post_comment_email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/post_comment_name"
        android:textColor="@color/default_blue"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/item_post_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_comment_email"
        android:text="Comment to the post"
        android:textSize="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/dark_grey"
        android:clickable="true"
        />
    <TextView
        android:id="@+id/commentMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:text="&#8942;"
        android:textAppearance="?android:textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/item_post_comment"
        android:layout_marginTop="4dp"
        android:background="@color/light_blue" />

</RelativeLayout>