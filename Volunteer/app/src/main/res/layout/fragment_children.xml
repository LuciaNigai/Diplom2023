<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChildrenFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_post_button_layout_children"
        >

        <Button
            android:id="@+id/add_post_button_children"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/light_blue"
            android:gravity="center_horizontal"
            android:text="Add post"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12dp" />

    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_posts_children"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_post_button_layout_children"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>