<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/post_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    >

    <TextView
        android:id="@+id/item_post_datetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginRight="30dp"
        android:text="DateTime"
        android:textColor="@color/dark_grey"
        android:textSize="13dp"
        android:gravity="right" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_info"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/image_view_post_item"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:visibility="visible"
            tools:src="@drawable/blankprofilepic" />

        <TextView
            android:id="@+id/post_item_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Name"
            android:layout_toEndOf="@+id/image_view_post_item"
            android:textColor="@color/default_text_blue"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_item_email"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/image_view_post_item"
            android:layout_below="@+id/post_item_name"
            android:textColor="@color/default_blue"
            android:textSize="13dp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/item_post_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_post_datetime"
        android:layout_marginRight="30dp"
        android:layout_marginTop="7dp"
        android:text="Category"
        android:textColor="@color/default_text_blue"
        android:textSize="13dp"
        android:gravity="right" />


    <TextView
        android:id="@+id/item_post_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/item_post_category"
        android:text="State"
        android:textColor="@color/default_text_blue"
        android:textSize="13dp"
        android:gravity="right" />
    <TextView
        android:id="@+id/item_post_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_info"
        android:text="Description of the post"
        android:textSize="14dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/dark_grey"
        android:clickable="true"
        />
    <TextView
        android:id="@+id/textViewOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:text="&#8942;"
        android:textAppearance="?android:textAppearanceLarge" />

    <ImageView
        android:layout_width="450dp"
        android:layout_height="250dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/item_post_description"
        android:id="@+id/image_view_post_photo"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/image_view_post_photo"
        android:layout_marginTop="7dp"
        android:background="@color/default_blue" />

</RelativeLayout>